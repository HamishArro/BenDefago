<body class="page">
  <h1>Hello!</h1>
  <div>
    <%= form_for @contact do |f| %>
      <%= f.label :name %> <br>
      <%= f.text_field :name, required: true %> <br>
      <%= f.label :email %> <br>
      <%= f.email_field :email, required: true %> <br>
      <%= f.label :message %> <br>
      <%= f.text_area :message, as: :text %> <br>
      <div class="hidden">
        <%= f.label :nickname %> <br>
        <%= f.text_field :nickname, hint: 'leave this feild blank' %>
      </div>
      <%= f.submit 'Send Message', class: "button" %>
    <% end %>
  </div>
</body>
